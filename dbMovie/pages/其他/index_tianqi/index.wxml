<view class="page">
    <view class='top'>
      <view class='input'>
          <input type='search' placeholder='输入城市名进行搜索' bindinput='bindKeyInput' />
      </view>
      <view class='icon'>
          <icon type='search' bindtap='search'/>
      </view>
    </view>

    <view class='body'>
      <view class='city'>
         <text >{{city}}</text>
      </view>
      <view class='date'>
         <text>今日</text>
      </view>
      <view class='img'>
        <image src='{{picUrl}}' mode='aspectFit' />
      </view>
    </view>

    <view class='foot'>
      <view class='left'>
          <text>天气:{{weather}}</text>
      </view>
      <view class='right'>
          <text>风力:{{wind}}</text>
          <text>温度:{{temp}}度</text>
      </view>
    </view>
</view>